---
layout: page.njk
---

<main class="article container">
    <div class="article__heading">
        <h1 class="article__heading--title">{{ title }}</h1>
        <time class="article__heading--time" datetime="{{ date.toISOString() }}">{{ date | ruDate }}</time>
        <img class="article__heading--img" src="images/preview.jpg" alt="{{title}}">
        <div class="article__heading--edit">
            <div class="article__heading--edit-icon">

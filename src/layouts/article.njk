            <a class="article__heading--edit-link" href="https://github.com/mentalsolin/blog.solin.me/blob/main/src{{page.url}}index.md"></a>
        </div>
    </div>
    {% include 'ads/letsplay.njk' %}
    <div class="content">
        {{ content | safe }}
    </div>
    <script>
        const data = {
            title: '{{ title }}',
            text: '{{ preview }}',
            url: '{{ page.url }}',
        };

        function share() {
            navigator.share(data)
        }
    </script>
